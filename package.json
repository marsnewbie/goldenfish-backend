{
  "name": "goldenfish-backend",
  "version": "1.0.1",
  "description": "Golden Fish Restaurant Order Management API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && cp -r src/migrations/*.sql dist/migrations/",
    "start": "node --no-deprecation dist/server.js",
    "migrate:production": "node dist/migrations/run.js || true",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "migrate": "node dist/migrations/run.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "deploy": "npm run build && railway deploy"
  },
  "keywords": [
    "restaurant",
    "ordering",
    "api",
    "nodejs",
    "typescript"
  ],
  "author": "Golden Fish",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.54.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^2.4.1",
    "redis": "^4.6.10",
    "resend": "^2.1.0",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
